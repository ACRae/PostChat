\newcommand{\CodeListing}[3]{
  \small
  \VerbatimInput[frame=lines, numbers=left, numbersep=-4pt]{#1}
  \caption{#2}
  \label{#3}
}


\newcommand{\CodeListingTen}[3]{
  \small
  \VerbatimInput[frame=lines, numbers=left, numbersep=-8pt]{#1}
  \caption{#2}
  \label{#3}
}



